@{
    ViewData["Title"] = "Welcome to Travel Agency Paola!";
}

@section Styles {
    <style>
        .landing-page {
            background-image: url('/images/backgroundLandingPage.jpg');
            background-size: cover;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            text-shadow: 2px 2px 4px #000;
        }

        .landing-page .btn {
            margin: 10px;
            width: 150px;
        }

        @@media (max-width: 768px) {
            .landing-page h1 {
                font-size: 2rem;
            }

            .landing-page p {
                font-size: 1.2rem;
            }
        }
    </style>
}



<div class="landing-page">
    <h1 class="display-4">🌍 Welcome to Travel Agency Paola</h1>
    <p class="lead">Discover beautiful destinations with expert guides.</p>

    <div>
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light">Register</a>
    </div>
</div>




